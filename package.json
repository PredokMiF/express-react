{
    "name": "app",
    "description": "I-Novus fullstack template with typescript, express and react",
    "private": true,
    "type": "module",
    "license": "Apache-2.0",
    "scripts": {
        "dev": "tsx watch --tsconfig ./tsconfig.node.json --ignore \"src-client\" --ignore \"vite.config.ts.timestamp-*\" src-server/index.ts | pino-pretty",
        "dev:windows": "chcp 65001&&npm run dev",
        "lint-build": "npm run clean:dist&&npm run clean:dist&&npm run lint&&npm run build",
        "start": "cross-env NODE_ENV=production node dist/server/index.js",
        "start:windows": "chcp 65001&&npm run start",
        "lint": "npm-run-all --parallel  lint:eslint lint:ts",
        "lint:eslint": "eslint src-base src-server src-client",
        "lint:ts": "tsc -b",
        "build": "npm-run-all --parallel build:front build:server",
        "build:front": "vite build",
        "build:server": "tsup",
        "clean:dist": "rimraf dist"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/PredokMiF/template-express-react.git"
    },
    "engines": {
        "node": ">=18.20.0"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "cross-env": "^7.0.3",
        "dotenv": "^16.4.5",
        "express": "^4.21.1",
        "express-session": "^1.18.1",
        "mongodb": "^6.10.0",
        "pino": "^9.5.0",
        "pino-http": "^10.3.0",
        "pino-pretty": "^11.3.0",
        "sirv": "^3.0.0",
        "statuses": "^2.0.1",
        "zod": "^3.23.8",
        "zod-validation-error": "^3.4.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.13.0",
        "@types/bcrypt": "^5.0.2",
        "@types/express": "^4.17.21",
        "@types/express-session": "^1.18.0",
        "@types/node": "^22.8.6",
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "@types/statuses": "^2.0.5",
        "@vitejs/plugin-react": "^4.3.3",
        "classnames": "^2.5.1",
        "eslint": "^9.13.0",
        "eslint-import-resolver-typescript": "^3.6.3",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-react": "^7.37.2",
        "eslint-plugin-react-hooks": "^5.1.0-rc.0",
        "eslint-plugin-react-refresh": "^0.4.14",
        "globals": "^15.11.0",
        "npm-run-all": "^4.1.5",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-router-dom": "^6.27.0",
        "rimraf": "^6.0.1",
        "sass": "^1.80.5",
        "tsc-alias": "^1.8.10",
        "tsup": "^8.3.5",
        "tsx": "^4.19.2",
        "typescript": "^5.6.3",
        "typescript-eslint": "^8.12.2",
        "vite": "^5.4.10"
    }
}
