{
    "name": "app",
    "private": true,
    "type": "module",
    "license": "Apache-2.0",
    "scripts": {
        "dev": "tsx watch --tsconfig ./tsconfig.server.json --ignore \"src-client\" --ignore \"vite.config.ts.timestamp-*\" src-server/index.ts | pino-pretty",
        "dev:windows": "chcp 65001&&yarn run dev",
        "build": "yarn run check&&yarn run build:all",
        "start": "cross-env NODE_ENV=production node --experimental-specifier-resolution=node dist/src-server/index.js",
        "start2": "cross-env NODE_ENV=production node dist/src-server/index.js",
        "start:windows": "chcp 65001&&yarn run start",
        "check": "yarn run lint&&yarn run ts:check",
        "lint": "eslint src-base src-server src-client",
        "ts:check": "tsc -b --noEmit&&npm run tsc:trash:clean",
        "build:all": "rimraf dist&&yarn run build:front&&yarn run build:server&&npm run tsc:trash:clean",
        "build:server": "tsc -b&&tsc-alias -p tsconfig.server.json",
        "build:front": "vite build --outDir dist/static",
        "tsc:trash:clean": "rimraf -g *.tsbuildinfo -g dist/*.tsbuildinfo"
    },
    "dependencies": {
        "cross-env": "^7.0.3",
        "dotenv": "^16.4.5",
        "express": "^4.21.1",
        "pino": "^9.4.0",
        "pino-http": "^10.3.0",
        "pino-pretty": "^11.2.2",
        "react-dom": "^18.3.1",
        "sirv": "^2.0.4",
        "zod": "^3.23.8",
        "zod-validation-error": "^3.4.0"
    },
    "devDependencies": {
        "@i-novus/eslint-config": "^1.0.19",
        "@types/express": "^4.17.21",
        "@types/node": "^18.19.55",
        "@types/react": "^18.3.11",
        "@types/react-dom": "^18.3.0",
        "@typescript-eslint/eslint-plugin": "6.19.1",
        "@typescript-eslint/parser": "6.19.1",
        "@vitejs/plugin-react": "^4.3.2",
        "bootstrap": "5.3.3",
        "classnames": "^2.5.1",
        "eslint": "8.57.1",
        "eslint-import-resolver-alias": "^1.1.2",
        "eslint-plugin-typescript-sort-keys": "^3.3.0",
        "react": "^18.3.1",
        "react-router-dom": "^6.26.2",
        "rimraf": "^5.0.5",
        "sass": "^1.75.0",
        "tsc-alias": "^1.8.10",
        "tsx": "^4.7.2",
        "typescript": "^5.6.3",
        "vite": "^5.4.8"
    }
}
